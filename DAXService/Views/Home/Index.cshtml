        <div class="col-lg-3">
            @*<img class="img-circle" src="~/img/team.png" alt="@Resources.Home.about">*@
            <a href="about" class="text-center">
                <div class="text-center">
                    <span class="glyphicon glyphicon-user"></span>
                </div>
                <h2>@Resources.Home.about</h2>
            </a>
            <p>@Resources.Home.aboutMain</p>
            @*<p><a class="btn btn-default" href="about" role="button">@Resources.Home.viewDetails &raquo;</a></p>*@
        </div><!-- /.col-lg-4 -->
        <div class="col-lg-3">
            @*<img class="img-circle" src="~/img/service.png" alt="@Resources.Home.services">*@
            <a href="services" class="text-center">
                <div class="text-center">
                    <span class="glyphicon glyphicon-folder-open"></span>
                </div>
                <h2>@Resources.Home.services</h2>
            </a>
            <p>@Resources.Home.servicesMain</p>
            @*<p><a class="btn btn-default" href="services" role="button">@Resources.Home.viewDetails &raquo;</a></p>*@
        </div><!-- /.col-lg-4 -->
        <div class="col-lg-3">
            @*<img class="img-circle" src="~/img/reference.png" alt="@Resources.Home.references">*@
            <a href="references" class="text-center">
                <div class="text-center">
                    <span class="glyphicon glyphicon-thumbs-up"></span>
                </div>
                <h2>@Resources.Home.references</h2>
            </a>
            <p>@Resources.Home.referencesMain</p>
            @*<p><a class="btn btn-default" href="references" role="button">@Resources.Home.viewDetails &raquo;</a></p>*@
        </div><!-- /.col-lg-4 -->
        <div class="col-lg-3">
            <a href="contact" class="text-center">
                <div class="text-center">
                    <span class="glyphicon glyphicon glyphicon-phone-alt"></span>
                </div>
                <h2>@Resources.Home.contact</h2>
            </a>
            <p>@Resources.Home.companyContact</p>
            @*<p><a class="btn btn-default" href="references" role="button">@Resources.Home.viewDetails &raquo;</a></p>*@
        </div>
    </div>
</div>