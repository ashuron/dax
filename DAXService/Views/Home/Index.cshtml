<!-- Carousel
    ================================================== -->
<div id="myCarousel" class="carousel slide" data-ride="carousel">
    <!-- Indicators -->
    <ol class="carousel-indicators">
        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
        <li data-target="#myCarousel" data-slide-to="1"></li>
        <li data-target="#myCarousel" data-slide-to="2"></li> 
    </ol>
    <div class="carousel-inner">
        <div class="item active">
            @*<img src="~/img/about_us_example.jpg" alt=@Resources.Home.about>*@
            <div class="container">
                <div class="carousel-caption">
                    <h1>@Resources.Home.about</h1>
                    <p class="text-center">@Resources.Home.aboutHome</p>
                    <p><a class="btn btn-lg btn-primary" href="about" role="button">@Resources.Home.readMore</a></p>
                </div> 
            </div>
        </div>
        <div class="item">
            @*<img src="~/img/services_example.jpg" alt=@Resources.Home.services>*@
            <div class="container">
                <div class="carousel-caption">
                    <h1>@Resources.Home.services</h1>
                    <p class="text-center">@Resources.Home.servicesHome</p>
                    <p><a class="btn btn-lg btn-primary" href="services" role="button">@Resources.Home.readMore</a></p>
                </div>
            </div>
        </div>
        <div class="item">
            @*<img src="~/img/references_example.jpg" alt="@Resources.Home.references">*@
            <div class="container">
                <div class="carousel-caption">
                    <h1>@Resources.Home.references</h1>
                    <p class="text-center">@Resources.Home.referencesHome</p>
                    <p><a class="btn btn-lg btn-primary" href="references" role="button">@Resources.Home.readMore</a></p>
                </div>
            </div>
        </div>
    </div>
    <a class="left carousel-control" href="#myCarousel" data-slide="prev"><span class="glyphicon glyphicon-chevron-left"></span></a>
    <a class="right carousel-control" href="#myCarousel" data-slide="next"><span class="glyphicon glyphicon-chevron-right"></span></a>
</div><!-- /.carousel -->
<!-- Marketing messaging and featurettes
    ================================================== -->
